{
    "name": "Live-Workspace",
    "displayName": "Live-Workspace",
    "description": "An FTP/SFTP workspace, with seamless integration, Work as if it was on local, With the ability to lock a file for safe usage!",
    "version": "0.0.1",
    "publisher": "m4dm0nk3y.za@gmail.com",
    "author": {
        "name": "m4dm0nk3y"
    },
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:.vscode/Live-Workspace.json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration" :{
            "type": "object",
            "title": "Live-Workspace Configuration",
            "properties": {
                "Live-Workspace.username":{
                    "type":"string",
                    "description": "Username to be used to lock files in the Live-Workspace."
                }
            }
        },
        "commands": [
            {
                "command": "live-workspace.refresh",
                "title": "Refresh",
                "icon": {
                    "dark": "./src/media/darkReload.svg",
                    "light": "./src/media/lightReload.svg"
                }
            },
            {
                "command": "live-workspace.checkout",
                "title": "Check Out"
            },
            {
                "command": "live-workspace.checkin",
                "title": "Check In"
            },
            {
                "command": "live-workspace.upload",
                "title": "Upload"
            },
            {
                "command": "live-workspace.download",
                "title": "Download"
            },
            {
                "command": "live-workspace.rename",
                "title": "Rename"
            },
            {
                "command": "live-workspace.delete",
                "title": "Delete"
            },
            {
                "command": "live-workspace.newfolder",
                "title": "New Folder"
            },
            {
                "command": "live-workspace.newfile",
                "title": "New File"
            }
        ],
        "menus": {
            "commandPalette": [],
            "view/title": [
                {
                    "command": "live-workspace.refresh",
                    "when": "view == live-workspace-remote",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "live-workspace.checkout",
                    "group": "LWS-a",
                    "when": "view == live-workspace-remote && viewItem == file"
                },
                {
                    "command": "live-workspace.checkin",
                    "group": "LWS-a",
                    "when": "view == live-workspace-remote && viewItem == file"
                },
                {
                    "command": "live-workspace.upload",
                    "group": "LWS-b",
                    "when": "view == live-workspace-remote && viewItem == file"
                },
                {
                    "command": "live-workspace.download",
                    "group": "LWS-b",
                    "when": "view == live-workspace-remote && viewItem == file"
                },
                {
                    "command": "live-workspace.rename",
                    "group": "LWS-d",
                    "when": "view == live-workspace-remote"
                },
                {
                    "command": "live-workspace.delete",
                    "group": "LWS-d",
                    "when": "view == live-workspace-remote"
                },
                {
                    "command": "live-workspace.newfolder",
                    "group": "LWS-c",
                    "when": "view == live-workspace-remote"
                },
                {
                    "command": "live-workspace.newfile",
                    "group": "LWS-c",
                    "when": "view == live-workspace-remote"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "live-workspace",
                    "title": "Live-Workspace",
                    "icon": "./src/media/laptop.svg"
                }
            ]
        },
        "views": {
            "live-workspace": [
                {
                    "id": "live-workspace-remote",
                    "name": "Remote"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^10.12.21",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1",
        "vscode": "^1.1.33"
    },
    "dependencies": {
        "@types/ftp": "^0.3.29",
        "@types/mkdirp": "^0.5.2",
        "@types/ssh2-sftp-client": "^2.4.1",
        "ftp": "^0.3.10",
        "ssh2-sftp-client": "^2.5.0"
    }
}
